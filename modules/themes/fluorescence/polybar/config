[global/wm]
margin-top = 0
margin-bottom = 34

[bar/bat2bar]
monitor = ${env:MONITOR}
monitor-strict = true
enable-ipc = true
wm-restack = bspwm
# REQUIRED to move the window with hideit.sh
override-redirect = true
fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

width = 100%
height = 34
offset-x = 0
offset-y = 0
bottom = true

overline-size = 0
overline-color = #f00
underline-size = 0
underline-color = #00f

border-bottom-size = 0
border-top-size = 1
border-color = ${colors.bg-dark}

padding-left = 2
padding-right = 2
module-margin-left = 0
module-margin-right = 0

font-0 = "Fira Code:pixelsize=9;2"
font-1 = Font Awesome 5 Free Regular:size=11;1
font-2 = Font Awesome 5 Free Solid:size=11;1
;font-1 = "Wuncon Siji:pixelsize=12;2"
;font-2 = "Siji:pixelsize=10;2"

; modules-left = volume pad cpu memory pad pkg mail
